
{$NEXT_PUBLIC_HASURA_DOMAIN:localhost} {
	route /v1* {
		# API (Hasura)
		reverse_proxy localhost:8080
	}
	route /v2* {
		# API (Hasura)
		reverse_proxy localhost:8080
	}
	route /console* {
		# Admin panel (Hasura).
		reverse_proxy localhost:8080
	}
	route /healthz* {
		# Healthcheck (Hasura).
		reverse_proxy localhost:8080
	}
	route /* {
		# Static files (Clean Slate)
		reverse_proxy localhost:3000
	}
}